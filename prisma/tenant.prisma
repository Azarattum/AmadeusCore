datasource db {
  provider = "sqlite"
  url      = "file:../data/tenant.dummy"
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/prisma/client/tenant"
}

model Track {
  id        Int        @id @default(autoincrement())
  date      DateTime   @default(now())
  title     String
  album     Album      @relation(references: [id], fields: [albumId])
  albumId   Int
  artists   Artist[]   @relation(references: [id])
  playlists Playlist[] @relation(references: [id])

  length Float
  cover  String?
  year   Int?

  sources String

  @@index([title])
}

model Playlist {
  id     Int     @id @default(autoincrement())
  title  String  @unique
  tracks Track[] @relation(references: [id])

  telegram Int? @unique

  //-1 Untracked, 0 Normal, 1 Discover, 2 Listen
  type Int @default(0)

  @@index([title])
}

model Album {
  id     Int     @id @default(autoincrement())
  title  String  @unique
  tracks Track[]

  @@index([title])
}

model Artist {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  tracks Track[] @relation(references: [id])

  @@index([name])
}
